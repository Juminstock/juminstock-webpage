---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Blog | Jumin Stock">
  <main class="container mx-auto px-4 py-12">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-4xl font-bold mb-6">Blog</h1>
      <div class="bg-white rounded-xl p-8 shadow-md">
        <div class="flex flex-col items-center justify-center gap-4">
          <svg class="w-16 h-16 text-brand" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
          </svg>
          <h2 class="text-2xl font-semibold">Coming Soon</h2>
          <p class="text-gray-600 text-lg">I'm building this section. Check back soon for updates!</p>
          
          <div class="mt-6 p-4 bg-gray-50 rounded-lg">
            <p class="text-gray-700 mb-3">Follow me on X to stay tuned!</p>
            <a 
              href="https://x.com/juminstock" 
              target="_blank" 
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 bg-black text-white px-4 py-2 rounded-lg font-medium hover:bg-brand transition-colors"
            >
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
              </svg>
              @juminstock
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout> 
---
import { Image } from 'astro:assets';
import startaleIcon from '../assets/startale-icon.svg';

const skills = [
  { name: "Blockchain Development", link: "https://github.com/Juminstock/soneium-ticker" },
  { name: "Technical Writing", link: "https://github.com/AstarNetwork/astar-docs/pull/739" },
  { name: "Public Speaking", link: "https://www.youtube.com/@Juminstock" },
  { name: "Community Management", link: "https://x.com/Juminstock/status/1901620253047611708" },
  { name: "Event Organizing", link: "https://x.com/Juminstock/status/1906707708192919556" },
  { name: "Business Growth Strategy", link: "https://x.com/fruteroclub/status/1909670617055633580" },
];
---

<div class="bg-white rounded-xl p-8 flex flex-col">
  <div class="space-y-6">
    <div class="space-y-2">
      <div class="flex items-center gap-2">
        <h2 class="text-2xl font-bold">
          Hello, everyone! <span class="animate-wave inline-block">üëã</span>
        </h2>
      </div>
      <h1 class="text-4xl font-extrabold">I'm Juminstock</h1>
      <p class="text-lg text-gray-600">Carlos Rodr√≠guez</p>
      <a 
        href="https://startale.com/en" 
        target="_blank" 
        rel="noopener noreferrer"
        class="flex items-center gap-2 inline-block rounded-lg bg-brand text-white text-sm font-medium px-2.5 py-1 mt-2 hover:bg-black transition-colors group w-fit"
      >
        <span>‚óè Working at Startale</span>
        <div class="group-hover:rotate-45 group-hover:scale-110 transition-transform">
          <Image 
            src={startaleIcon} 
            alt="Startale Logo" 
            width={24} 
            height={24}
            class="text-white"
          />
        </div>
      </a>
    </div>

    <div class="space-y-4 mt-6">
      <p class="text-gray-700">
        Developer Relations focused on Blockchain and Web3, with knowledge in Technical Writing and
        decentralized application development. Growth Hacker, Public Speaker, and Community Manager.
      </p>

      <div class="mt-4 flex items-center justify-center gap-2">
        <svg class="w-11 h-11 text-[#f3a343]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
          <line x1="8" y1="21" x2="16" y2="21"></line>
          <line x1="12" y1="17" x2="12" y2="21"></line>
        </svg>
        <svg class="w-11 h-11 text-[#f3a343]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M18 3a3 3 0 0 0-3 3v12a3 3 0 0 0 3 3 3 3 0 0 0 3-3 3 3 0 0 0-3-3H6a3 3 0 0 0-3 3 3 3 0 0 0 3 3 3 3 0 0 0 3-3V6a3 3 0 0 0-3-3 3 3 0 0 0-3 3 3 3 0 0 0 3 3h12a3 3 0 0 0 3-3 3 3 0 0 0-3-3z"></path>
        </svg>
      </div>
    </div>

    <div class="flex justify-center flex-wrap gap-2 mt-6">
      {skills.map((skill) => (
        <a 
          href={skill.link} 
          target="_blank" 
          rel="noopener noreferrer"
          class="px-3 py-1 text-sm rounded-lg bg-brand text-white hover:bg-black transition-colors"
        >
          {skill.name}
        </a>
      ))}
    </div>
  </div>
</div>

<style>
  .animate-spin-slow {
    animation: spin 8s linear infinite;
  }
  
  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
</style> 
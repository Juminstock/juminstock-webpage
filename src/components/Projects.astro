---
import { Image } from 'astro:assets';
import soneiumTickerImage from '../assets/soneium-ticker.png';
import meztliLabImage from '../assets/meztli-lab.png';
import polkadotSpeedrunImage from '../assets/polkadot-speedrun.png';

interface Project {
  title: string;
  subtitle: string;
  imageUrl: string | ImageMetadata;
  hasLink: boolean;
  link?: string;
}

const projects = [
  {
    title: "Soneium Ticker",
    subtitle: "Soneium Ticker • An dApp to mint tokens (NFTs)",
    imageUrl: soneiumTickerImage,
    hasLink: true,
    link: "https://soneium-ticker.vercel.app"
  },
  {
    title: "Meztli Lab",
    subtitle: "Meztli Lab • Home for Frutero Club Hacker House",
    imageUrl: meztliLabImage,
    hasLink: true,
    link: "https://meztli-lab.vercel.app/"
  },
  {
    title: "Polkadot SpeedRun",
    subtitle: "Polkadot SpeedRun • A hub for tutorials and events",
    imageUrl: polkadotSpeedrunImage,
    hasLink: true,
    link: "https://polkadot-speedrun.vercel.app/"
  }
];
---

<div class="relative bg-white rounded-xl overflow-hidden flex items-center justify-center max-h-[745px] flex-1">
  <div class="w-full h-full flex flex-col p-6 overflow-hidden">
    <div class="h-full overflow-y-auto pr-2">
      <div class="grid grid-cols-1 gap-4">
        {projects.map((project) => (
          <a 
            href={project.hasLink ? project.link : undefined}
            target="_blank" 
            rel="noopener noreferrer"
            class="block bg-gray-100 rounded-xl overflow-hidden hover:shadow-[0_4px_20px_rgba(243,163,67,0.6)] transition-shadow group"
          >
            <div class="relative w-full h-48 overflow-hidden">
              {typeof project.imageUrl === 'string' ? (
                <img
                  src={project.imageUrl}
                  alt={project.title}
                  class="w-full h-full object-cover transform transition-transform duration-300 ease-in-out group-hover:scale-110"
                />
              ) : (
                <Image
                  src={project.imageUrl}
                  alt={project.title}
                  width={300}
                  height={200}
                  quality={100}
                  format="png"
                  class="w-full h-full object-cover transform transition-transform duration-300 ease-in-out group-hover:scale-110"
                />
              )}
            </div>
            <div class="p-4">
              <p class="text-sm font-medium text-gray-700 truncate">{project.subtitle}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</div> 